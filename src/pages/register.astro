---
import BaseLayout from "../layouts/BaseLayout.astro";
import Signup from "../components/Forms/Signup.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!---
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Log in"
  description="Register with 53C"
  canonical="https://www.53c.co.za"
  openGraph={{
    url: "https://53c.co.za",
    title: "53C Open Graph",
    description: "For security",
    images: [
      {
        url: "https://www.53c.co.za/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.53c.co.za/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.53c.co.za/opengraph/social-og.jpg" },
      { url: "https://www.53c.co.za/opengraph/twitter-og.jpg" },
    ],
    site_name: "53C",
  }}
  twitter={{
    handle: "@INFO53C",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <Signup />
</BaseLayout>
